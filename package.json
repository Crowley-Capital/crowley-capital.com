{
  "name": "crowley-capital",
  "version": "1.0.0",
  "private": true,
  "description": "Crowley Capital - Venture Capital Website with AI-Powered Blog",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:web": "npm run dev --workspace=@crowley/web",
    "dev:api": "npm run dev --workspace=@crowley/api",
    "build": "npm run build --workspace=@crowley/web",
    "start:api": "npm run start --workspace=@crowley/api",
    "lint": "npm run lint --workspace=@crowley/web",
    "clean": "rm -rf apps/*/node_modules node_modules",
    "install:all": "npm install && npm install --workspace=@crowley/web && npm install --workspace=@crowley/api"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}